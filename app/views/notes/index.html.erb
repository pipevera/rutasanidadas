<p id="notice"><%= notice %></p>

<h1>Notes</h1>

<table>
  <thead>
    <tr>
      <th>Content</th>
      <th>Person</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @notes.each do |note| %>
      <tr>
        <td><%= note.content %></td>
        <td><%= note.person.name %></td>
        <td><%= link_to 'Show', group_person_note_path(@group, @person, note) %></td>
        <td><%= link_to 'Edit', edit_group_person_note_path(@group, @person, note) %></td>
        <td><%= link_to 'Destroy', group_person_note_path(@group, @person, note), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Note', new_group_person_note_path(@group, @person) %> |
<%= link_to 'Back', group_people_path(@group) %>
